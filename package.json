{
  "name": "eslint-config-cmyr",
  "version": "1.1.33",
  "author": "CaoMeiYouRen",
  "description": "草梅友仁个人使用的 eslint 检测规范",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "files": [
    "index.js",
    "vue.js",
    "browser.js"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js"
    },
    "./index": {
      "import": "./index.js",
      "require": "./index.js"
    },
    "./vue": {
      "import": "./vue.js",
      "require": "./vue.js"
    },
    "./browser": {
      "import": "./browser.js",
      "require": "./browser.js"
    },
    "./react": {
      "import": "./react.js",
      "require": "./react.js"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "deploy-beta": "nrm use npm && npm publish --tag beta",
    "lint": "cross-env NODE_ENV=production eslint *.js --fix --ext .js",
    "release": "semantic-release",
    "test:js": "cross-env NODE_ENV=production eslint -c index.js test/js.test.js",
    "test:ts": "cross-env NODE_ENV=production eslint -c index.js test/ts.test.ts",
    "test:browser": "cross-env NODE_ENV=production eslint -c browser.js test/browser.test.js",
    "test:vue": "cross-env NODE_ENV=production eslint -c vue.js test/Vue3Test.vue",
    "test:react": "cross-env NODE_ENV=production eslint -c react.js test/react.test.jsx",
    "test": "npm run test:js && npm run test:ts && npm run test:browser && npm run test:vue && npm run test:react"
  },
  "keywords": [
    "code",
    "style",
    "lint",
    "eslint",
    "code style"
  ],
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "conventional-changelog-cmyr-config": "^2.0.4",
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-vue": "^10.4.0",
    "semantic-release": "^19.0.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=3",
    "@typescript-eslint/parser": ">=3",
    "@vue/eslint-config-typescript": ">=5",
    "eslint": ">=9",
    "eslint-config-react-app": ">=5",
    "eslint-plugin-import": ">=2",
    "eslint-plugin-vue": ">=6",
    "typescript": ">=3"
  },
  "peerDependenciesMeta": {
    "@vue/eslint-config-typescript": {
      "optional": true
    },
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    },
    "eslint-config-react-app": {
      "optional": true
    },
    "eslint-plugin-import": {
      "optional": true
    },
    "eslint-plugin-vue": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "globals": "^16.3.0"
  }
}
