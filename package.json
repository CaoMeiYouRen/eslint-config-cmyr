{
  "name": "eslint-config-cmyr",
  "version": "2.0.0-beta.5",
  "author": "CaoMeiYouRen",
  "description": "草梅友仁个人使用的 eslint 检测规范",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "files": [
    "index.js",
    "vue.js",
    "browser.js",
    "react.js",
    "nuxt.js",
    "utils.js"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js"
    },
    "./index": {
      "import": "./index.js",
      "require": "./index.js"
    },
    "./vue": {
      "import": "./vue.js",
      "require": "./vue.js"
    },
    "./nuxt": {
      "import": "./nuxt.js",
      "require": "./nuxt.js"
    },
    "./browser": {
      "import": "./browser.js",
      "require": "./browser.js"
    },
    "./react": {
      "import": "./react.js",
      "require": "./react.js"
    },
    "./utils": {
      "import": "./utils.js",
      "require": "./utils.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "deploy-beta": "nrm use npm && npm publish --tag beta",
    "lint": "cross-env NODE_ENV=production eslint *.js --fix --ext .js",
    "release": "semantic-release",
    "test:js": "cross-env NODE_ENV=production eslint -c index.js test/js.test.js",
    "test:ts": "cross-env NODE_ENV=production eslint -c index.js test/ts.test.ts",
    "test:browser": "cross-env NODE_ENV=production eslint -c browser.js test/browser.test.js",
    "test:vue": "cross-env NODE_ENV=production eslint -c vue.js test/Vue3Test.vue",
    "test:nuxt": "cross-env NODE_ENV=production eslint -c nuxt.js test/NuxtTest.vue",
    "test:react": "cross-env NODE_ENV=production eslint -c react.js test/react.test.jsx",
    "test:tsx": "cross-env NODE_ENV=production eslint -c react.js test/react.test.tsx",
    "test": "npm run test:js && npm run test:ts && npm run test:browser && npm run test:vue && npm run test:nuxt && npm run test:react && npm run test:tsx"
  },
  "keywords": [
    "code",
    "style",
    "lint",
    "eslint",
    "code style"
  ],
  "homepage": "https://github.com/CaoMeiYouRen/eslint-config-cmyr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/eslint-config-cmyr.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/eslint-config-cmyr/issues"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.3.0",
    "conventional-changelog-cmyr-config": "^2.1.2",
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-vue": "^10.4.0",
    "semantic-release": "^19.0.5",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "eslint": ">=9",
    "eslint-plugin-react": ">=7",
    "eslint-plugin-vue": ">=10",
    "typescript": ">=5"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-vue": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@eslint/js": "^9.33.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "typescript-eslint": "^8.39.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "unrs-resolver"
    ]
  }
}
