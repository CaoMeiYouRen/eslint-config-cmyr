{
  "name": "eslint-config-cmyr",
  "version": "2.0.1",
  "author": "CaoMeiYouRen",
  "description": "草梅友仁个人使用的 eslint 检测规范",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "files": [
    "index.js",
    "vue.js",
    "browser.js",
    "react.js",
    "nuxt.js",
    "utils.js",
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./dist/index.cjs"
    },
    "./index": {
      "import": "./index.js",
      "require": "./dist/index.cjs"
    },
    "./vue": {
      "import": "./vue.js",
      "require": "./dist/vue.cjs"
    },
    "./nuxt": {
      "import": "./nuxt.js",
      "require": "./dist/nuxt.cjs"
    },
    "./browser": {
      "import": "./browser.js",
      "require": "./dist/browser.cjs"
    },
    "./react": {
      "import": "./react.js",
      "require": "./dist/react.cjs"
    },
    "./utils": {
      "import": "./utils.js",
      "require": "./dist/utils.cjs"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "husky install",
    "deploy-beta": "nrm use npm && npm publish --tag beta",
    "lint": "cross-env NODE_ENV=production eslint . --fix",
    "release": "semantic-release",
    "build": "cross-env NODE_ENV=production tsdown",
    "test:js": "cross-env NODE_ENV=production eslint -c index.js test/js.test.js",
    "test:ts": "cross-env NODE_ENV=production eslint -c index.js test/ts.test.ts",
    "test:browser": "cross-env NODE_ENV=production eslint -c browser.js test/browser.test.js",
    "test:vue": "cross-env NODE_ENV=production eslint -c vue.js test/Vue3Test.vue",
    "test:nuxt": "cross-env NODE_ENV=production eslint -c nuxt.js test/NuxtTest.vue",
    "test:react": "cross-env NODE_ENV=production eslint -c react.js test/react.test.jsx",
    "test:tsx": "cross-env NODE_ENV=production eslint -c react.js test/react.test.tsx",
    "test": "npm run test:js && npm run test:ts && npm run test:browser && npm run test:vue && npm run test:nuxt && npm run test:react && npm run test:tsx"
  },
  "keywords": [
    "code",
    "style",
    "lint",
    "eslint",
    "code style"
  ],
  "homepage": "https://github.com/CaoMeiYouRen/eslint-config-cmyr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/eslint-config-cmyr.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/eslint-config-cmyr/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@types/node": "^24.3.0",
    "commitlint-config-cmyr": "1.0.0",
    "cross-env": "^10.0.0",
    "cz-conventional-changelog-cmyr": "2.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-vue": "^10.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "semantic-release": "^24.2.7",
    "semantic-release-cmyr-config": "1.0.0",
    "tsdown": "^0.14.1",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "eslint": ">=9",
    "eslint-plugin-react": ">=7",
    "eslint-plugin-vue": ">=10",
    "typescript": ">=5"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-vue": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@eslint/js": "^9.33.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "typescript-eslint": "^8.39.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "unrs-resolver"
    ]
  },
  "changelog": {
    "language": "zh"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "npm run lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-cmyr"
    }
  }
}
